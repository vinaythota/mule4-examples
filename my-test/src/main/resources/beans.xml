<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.1.xsd">
		<context:annotation-config/>
		<bean id="messageTranslator" class="com.wavemoney.util.MessageTranslator" scope="singleton">
			<constructor-arg name="messagesFolder" value="messages"/>
			<constructor-arg name="localesPropertiesFile" value="locales.properties"/>
			<constructor-arg name="encodingsPropertiesFile" value="encodings.properties"/>
			<constructor-arg name="messagesFilePrefix" value="YomaMessageBundle"/>
			
			<property name="messageGroups">
				<array>
					<value>test</value>
				</array>
			</property>

		</bean>
</beans>